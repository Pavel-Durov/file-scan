{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Current TS File",
        "type": "node",
        "request": "launch",
        "args": ["${relativeFile}"],
        "runtimeArgs": ["--nolazy", "-r", "ts-node/register", "-r", "tsconfig-paths/register"],
        "sourceMaps": true,
        "cwd": "${workspaceRoot}",
        "protocol": "inspector"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run AVA test",
        "program": "${workspaceRoot}/node_modules/ava/cli.js",
        "args": ["${file}", "--serial"],
        "skipFiles": ["<node_internals>/**/*.js"]
      }
    ]
  }