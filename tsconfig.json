{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2016",
      "es2017",
      "dom",
      "dom.iterable"
    ],
    "strict": true,
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "dist",
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src",
    "test"
  ],
  "exclude": [
    "test/*.spec.ts"
  ],
}
