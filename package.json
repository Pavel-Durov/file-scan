{
  "name": "@ihcmikmai/file-scan",
  "version": "0.4.3",
  "description": "scan text files for patterns",
  "main": "src/index.js",
  "bin": {
    "file-scan": "src/index.js"
  },
  "engines": {
    "node": "node >= 12.16.3",
    "yarn": "yarn >=1.22.4"
  },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register ./src/index.ts",
    "start:verbose": "FILE_SCAN_DEBUG=* yarn start",
    "lint": "eslint '*/**/*.{js,ts}'",
    "lint:fix": "yarn lint --quiet --fix",
    "build": "rimraf dist && tsc --module commonjs",
    "test": "ava",
    "test:verbose": "FILE_SCAN_DEBUG=* yarn test"
  },
  "author": "Pavel-Durov",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^14.0.27",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "rimraf": "^3.0.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@types/debug": "^4.1.5",
    "@types/glob": "^7.1.3",
    "@types/ramda": "^0.27.14",
    "@types/sinon": "^9.0.4",
    "@types/yargs": "^15.0.5",
    "ava": "^3.11.0",
    "commander": "^6.0.0",
    "debug": "^4.1.1",
    "prettier": "^2.0.5",
    "ramda": "^0.27.1",
    "sinon": "^9.0.2",
    "ts-node": "^8.10.2",
    "yargs": "^15.4.1"
  },
  "ava": {
    "failFast": true,
    "verbose": true,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register",
      "tsconfig-paths/register"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Pavel-Durov/file-scan.git"
  },
  "keywords": [
    "files",
    "scan",
    "glob",
    "regex"
  ],
  "bugs": {
    "url": "https://github.com/Pavel-Durov/file-scan/issues"
  },
  "homepage": "https://github.com/Pavel-Durov/file-scan#readme"
}